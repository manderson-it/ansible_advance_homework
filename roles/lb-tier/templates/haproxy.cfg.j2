global
  log /dev/log  local0
  log /dev/log  local1 notice
  stats socket /var/lib/haproxy/stats level admin
  chroot /var/lib/haproxy
  user haproxy
  group haproxy
  daemon

defaults
  log global
  mode  http
  option  httplog
  option  dontlognull
        timeout connect 5000
        timeout client 50000
        timeout server 50000

frontend hafrontend
    bind *:{{haproxy_frontend_port}}
    mode http
    default_backend app-servers

backend app-servers
    mode http
    balance roundrobin
    option forwardfor
    server 10.10.10.16 10.10.10.16.eae1.internal:8080 cookie 10.10.10.16 check
    server 10.10.10.14 10.10.10.14.eae1.internal:8080 cookie 10.10.10.14 check
